<div class="card project-card mb-3">
  <div class="card-body">
    <div class="mb-3">
      <i class="fas fa-grip-vertical grip text-secondary mr-2"></i>
      <span class="badge badge-success">Titre <%= paragraph.title %></span>
      <span class='text-secondary'><small>Contenu: <%= paragraph.content %></small></span>
    </div>
    <span><a href="<%= edit_paragraph_path(paragraph.id) %>" class="btn btn-primary">Editer</a></span>
    <span><a href="<%= paragraph_path(paragraph.id) %>" class="btn btn-danger" data-confirm="Etes-vous sur?" data-method="DELETE">Supprimer</a></span>
    <%= link_to "Voir les paragraphes", paragraphs_path, class: "btn btn-primary" %>
  </div>
</div>
