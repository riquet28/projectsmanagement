<div class="content-header">
  <div class="row mb-2">
    <div class="col-sm-6 offset-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active">Paragraphes</li>
      </ol>
    </div><!-- /.col -->
  </div><!-- /.row -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="jumbotron">
    <h2>Liste des paragraphes</h2>
  </div>
  <div class="card">
    <div class="card-body">
      <div data-controller="drag" data-drag-url="/paragraphs/:id/move" id="paragraphs">
        <%= render @paragraphs.ordered_by_position %>
      </div>
      <div class="float-right" id="new-paragraph">
        <%= link_to "Nouveau Paragraphe", new_paragraph_path, remote: true, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</section>
