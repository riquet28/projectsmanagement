<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record? } do %>

  <div class="card">

    <div class="card-header">
      <% if action_name == "new" %>
        Sous-paragraphe du nouvel élément
      <% else %>
        Sous-paragraphe de <b><%= @paragraph.title %></b>
      <% end %>
      <%= link_to "#", data: { action: "click->nested-form#remove_association" }, class: "float-right" do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>

    <div class="card-body">
      <div class="form-group">
        <%= form.input :title, label: false %>
      </div>
      <div class="form-group">
        <%= form.input :content, as: :rich_text_area, placeholder: 'Ecrivez votre paragraphe ici', class: 'form-control', label: false %>
      </div>
      <%= form.input :_destroy, as: :hidden %>
    </div>

  </div>

<% end %>
