<h1>Edition de <%= @ticket.title %> / <%= @ticket.id %></h1>

<%= simple_form_for @ticket, wrapper: :horizontal_form do |f| %>

  <%= f.input :tracker, collection: Ticket.trackers.keys, include_blank: false %>
  <%= f.input :title %>
  <%= f.input :tracker_number %>
  <%= f.input :reference %>
  <%= f.input :url_link %>
  <%= f.input :position %>
  <%= f.input :description %>

  <%= f.button :submit, "Modifier", class: "btn-primary" %>

<% end %>
