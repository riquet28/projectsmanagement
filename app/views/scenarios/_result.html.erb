<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record? } do %>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= form.input :description %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= form.input :dev, collection: Result.devs.keys %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= form.input :staging, collection: Result.stagings.keys %>
      </div>
    </div>
    <small><%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" } %></small>
    <%= form.input :_destroy, as: :hidden %>
  </div>
<% end%>
